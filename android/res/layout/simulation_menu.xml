<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simulationMenu"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/menu_line_height"
>

    <ImageButton
        android:src="@android:drawable/ic_media_pause"
        android:onClick="gpsPause"
        android:layout_width="@dimen/menu_line_button_width"
        android:layout_height="@dimen/menu_line_height_minusText"
        android:contentDescription="@string/gps_simulation_pause"
        style="@style/MwmTheme.Menu.Line.Button"
        android:layout_row="3"
        android:layout_column="0"
        android:alpha="0.6"
        android:id="@+id/simulationPauseButton"
      />

    <ImageButton
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:onClick="gpsStop"
        android:layout_width="@dimen/menu_line_button_width"
        android:layout_height="@dimen/menu_line_height_minusText"
        android:contentDescription="@string/gps_simulation_stop"
        style="@style/MwmTheme.Menu.Line.Button"
        android:layout_row="3"
        android:layout_column="1"
        android:alpha="0.6"
      />

    <View
        android:background="@android:color/darker_gray"
        android:layout_height="1px"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_width="@dimen/menu_line_button_width_double"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/menu_line_subText_height"
        android:text="GPS-Simulation"
        android:id="@+id/textView2"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/darker_gray"
        />

  </GridLayout>
